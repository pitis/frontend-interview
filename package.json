{
  "name": "frontend-interview",
  "version": "1.0.0",
  "workspaces": [
    "applications/*"
  ],
  "dependencies": {
    "prettier": "^3.3.3"
  },
  "devDependencies": {
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7"
  },
  "scripts": {
    "prepare": "husky",
    "dev:client": "npm run dev --workspace=@frontend-interview/next-boilerplate-client",
    "dev:server": "npm run dev --workspace=@frontend-interview/graphql-server"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
